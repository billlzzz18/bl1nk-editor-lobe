{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@shared/*": [
        "./shared/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@lib/*": [
        "./app/lib/*"
      ],
      "@hooks/*": [
        "./app/hooks/*"
      ],
      "@types/*": [
        "./app/types/*"
      ],
      "@utils/*": [
        "./app/utils/*"
      ],
      "@plugins/*": [
        "./app/plugins/*"
      ],
      "@server/*": [
        "./server/*"
      ],
      "@agents/*": [
        "./agents/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}